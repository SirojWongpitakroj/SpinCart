<%- include("partials/header.ejs") %>

    <section class="bg-cream px-4 sm:px-6 lg:px-8 py-20">
        <div class="max-w-7xl mx-auto">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Featured Products</h2>

            <!-- Product Grid -->
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                
                <% locals.products.forEach((prod) => { %>
                    <form action="/product" method="POST" class="bg-white rounded-xl hover:shadow-lg transition product-card h-full">
                        <!--metadata-->
                        <input type="hidden" name="id" value="<%= prod.id %>">
                        <!--Product Card-->
                        <button type="submit" class="flex flex-col h-full text-left w-full">
                            <div class="p-4 overflow-hidden aspect-square flex items-center justify-center">
                                <img src="<%= prod.url %> " alt="Product image"
                                    class="w-full h-full object-contain">
                            </div>
                            <div class="p-4 flex flex-col flex-1">
                                <h3 class="text-left text-lg font-medium text-gray-900 line-clamp-2"><%= prod.title %></h3>
                                <p class="text-left mt-1 text-xs text-gray-500"><%= prod.short_description %></p>
                                <div class="pt-2 mt-auto flex items-center justify-between">
                                    <span class="text-blue-600 font-semibold">฿<%= prod.price %> </span>
                                    <div class="p-2 rounded-full bg-gray-200 text-sm"><%= prod.category %> </div>
                                </div>
                            </div>
                        </button>
                    </form>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Login Overlay Modal (hidden by default) -->
    <div id="login-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50">
        <div class="relative w-[95%] max-w-md bg-white rounded-2xl border-2 border-purple-500 p-6 text-center shadow-xl">
            <!-- Logo -->
            <div class="mx-auto mb-4 h-20 w-20 rounded-full overflow-hidden flex items-center justify-center bg-blue-500">
                <img src="images/SpinCart-logo.png" alt="SpinCart" class="w-16 h-16 object-contain">
            </div>

            <!-- Headings -->
            <h2 class="text-xl font-semibold">Welcome to SpinCart</h2>
            <p class="text-gray-700 mt-1">We’ll check if you have an account</p>

            <!-- Signup CTA (replaces social icons) -->
            <div class="mt-4">
                <a href="./signup.html" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-full">Sign up</a>
            </div>

            <!-- Divider -->
            <div class="flex items-center gap-3 my-4">
                <span class="flex-1 h-px bg-gray-300"></span>
                <span class="text-gray-600 text-sm">OR</span>
                <span class="flex-1 h-px bg-gray-300"></span>
            </div>

            <!-- Username / Password -->
            <div class="space-y-3 text-left">
                <label class="block">
                    <span class="block text-sm font-medium text-gray-700 mb-1">Username</span>
                    <input type="text" placeholder="Username" class="w-full rounded-full border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </label>
                <label class="block">
                    <span class="block text-sm font-medium text-gray-700 mb-1">Password</span>
                    <input type="password" placeholder="Password" class="w-full rounded-full border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </label>
            </div>

            <!-- Login button -->
            <button class="mt-5 w-full bg-blue-600 hover:bg-blue-700 text-white text-base font-semibold py-2 rounded-full">Login</button>
        </div>
    </div>

<%- include("partials/footer.ejs") %>