                            <div class="p-2 rounded-full bg-gray-200 text-sm">Clothes</div>
                        </div>
                    </div>
                </article>

                <!-- Card 6 -->
                <article class="cards bg-white rounded-xl product-card" data-category="Home Appliance">
                    <div class="p-4 overflow-hidden aspect-square">
                        <img src="product_images/Lamp.png" alt="Product image"
                             class="w-full h-full object-scale-down">
                    </div>
                    <div class="p-4">
                        <h3 class="text-sm font-medium text-gray-900 line-clamp-2">Antique Lamp</h3>
                        <p class="mt-1 text-xs text-gray-500">Lighten room with retro styles</p>
                        <div class="mt-3 flex items-center justify-between">
