<%- include("partials/header.ejs") %>

    <!--Main section-->
    <section class="flex md:flex-row flex-col p-8 h-screen pt-24">
        <!--Image Section-->
        <div class="relative flex justify-center items-center w-full md:w-1/2 max-w-2xl rounded-2xl bg-white md:p-16 p-8 flex-shrink-0">
            <img src="<%= prod.url %>" alt="Product Image" class="w-full h-auto max-h-[480px] object-contain">
            <div class="absolute top-1/2 left-2 rounded-full">
                <img src="images/Arrow-icon.png" alt="arrow-icon">
            </div>
            <div class="absolute top-1/2 right-2 rounded-full scale-x-[-1]">
                <img src="images/Arrow-icon.png" alt="arrow-icon">
            </div>
        </div>

        <!--Product Title and Description-->
        <div class="flex flex-col items-start p-2 gap-2">
            <h1 class="text-2xl font-semibold"><%= prod.title %></h1>
            <p class="bg-white rounded-lg p-2"><%= prod.short_description %></p>
            <h2 class="text-xl font-semibold">Description</h2>
            <p class="long-text text-sm bg-white rounded-lg p-2"><%= prod.description %></p>
            <div class="flex justify-between items-end p-4 w-full h-full">
                <div class="flex flex-col h-full gap-2 justify-end w-1/2 md:w-auto">
                    <div class="flex items-center gap-2">
                        <img src="images/star-icon.png" alt="star-icon" class="h-8 object-contain">
                        <h3 class="text-yellow-400 text-3xl font-bold">4.7</h3>
                        <h4 class="text-md font-medium">(1983)</h4>
                    </div>
                    <div class="flex flex-col items-center border-black bg-yellow-100 rounded-xl shadow-[inset_0_0_10px_rgba(0,0,0,0.05)] p-4 gap-2">
                        <p class="long-text text-center text-xs lg:w-48 md:w-32">I'm very satisfied with this air purifier. Since I've been using it. I've noticed the air is much fresher and cleaner, especially in the room where I spend the most time.</p>
                        <img src="images/star-icon.png" alt="star-icon" class="w-6 h-6">
                    </div>
                </div>
                <div class="flex flex-col items-end gap-3">
                    <form action="/cart/add" method="POST" class="flex flex-col items-center gap-3">
                        <div class="flex items-center rounded-full">
                            <button type="button" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-full quantity-btn" data-quantity-action="decrement">-</button>
                            <input type="number" name="quantity" value="1" min="1" readonly class="w-12 text-center appearance-none [appearance:textfield] focus:outline-none 
                            no-spinner quantity-input">
                            <button type="button" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-full quantity-btn" data-quantity-action="increment">+</button>
                        </div>
                        <h2 class="text-2xl font-bold mr-4 whitespace-nowrap">à¸¿<%= prod.price %></h2>
                        <input type="hidden" name="id" value="<%= prod.product_id %>">
                        <button type="submit" class="bg-blue-500 rounded-full px-6 py-3 text-white whitespace-nowrap hover:bg-blue-600 transition">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
        
    </section>

<%- include("partials/footer.ejs") %>