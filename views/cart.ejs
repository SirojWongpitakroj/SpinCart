<%- include("partials/header.ejs") %>

    <section class="pt-16">
        <!-- Title bar -->
        <div class="w-full bg-[#ffd174]">
            <h1 class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-12 flex items-center justify-center text-lg font-semibold text-gray-900">Shopping Cart</h1>
        </div>

        <!-- Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 grid grid-cols-1 gap-6 lg:flex lg:justify-center lg:gap-10">
            <!-- Cart items -->
            <div class="lg:flex-[2] lg:w-full lg:max-w-3xl space-y-4">
                <% items.forEach(item => { %>
                    <!-- Item -->
                    <div class="relative flex gap-4 bg-white rounded-xl shadow-sm p-4 items-center">
                    <!-- <input type="checkbox" aria-label="Select item" class="shrink-0 w-6 h-6 rounded-full border-2 border-gray-300 appearance-none cursor-pointer checked:bg-blue-600 focus:outline-none item-checkbox" /> -->
                        <img src="<%=item.url%>" alt="Smart Air Purifier" class="w-24 h-24 rounded-md object-contain bg-gray-100">
                        <div class="flex-1">
                            <a href="#" class="text-lg font-semibold text-blue-700"><%=item.title%></a>
                            <p class="mt-1 text-sm text-gray-700"><%= item.short_description %></p>
                            <div class="mt-2 flex items-center gap-2 text-sm">
                                <span class="font-semibold">฿<%=item.price%></span>
                            </div>
                        </div>
                        <button class="absolute top-3 right-4 text-gray-400 hover:text-gray-600 remove-btn" aria-label="remove" data-item-id="<%= item.cart_items_id %>">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 7h12M9 7v10m6-10v10M4 7h16l-1 14H5L4 7zM9 7l1-2h4l1 2"/></svg>
                        </button>
                        <!-- qty controls -->
                        <div class="absolute bottom-3 right-4">
                            <div class="flex items-center rounded-full">
                                <button type="button" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-full qty-btn" data-quantity-action="decrement" data-item-id="<%= item.cart_items_id %>" data-price="<%= item.unit_price %>">-</button>
                                <input type="number" name="quantity" value="<%= item.quantity %>" min="1" readonly class="w-12 text-center pl-4 appearance-none [appearance:textfield] focus:outline-none 
                                no-spinner quantity-input">
                                <button type="button" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-full qty-btn" data-quantity-action="increment" data-item-id="<%= item.cart_items_id %>" data-price="<%= item.unit_price %>">+</button>
                            </div>
                        </div>
                    </div>
                <% }); %>

            <!-- Summary -->
            <aside class="lg:flex-[2] lg:w-full lg:max-w-3xl">
                <div class="bg-white rounded-xl shadow-sm p-5 lg:sticky lg:top-24">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Payment Details</h2>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between"><span class="text-gray-600">Subtotal</span><span id="subtotal" class="text-gray-900">฿<%= locals.subtotal %></span></div>
                        <div class="flex justify-between"><span class="text-gray-600">Shipping fee</span><span class="text-gray-900">฿100</span></div>
                        <hr class="my-3">
                        <div class="flex justify-between text-base font-semibold"><span>Total Payment</span><span id="total">฿<%= locals.subtotal + 100 %></span></div>
                    </div>
                    <a href="/payment" class="block text-center mt-4 w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 rounded-full">Place Order</a>
                </div>
            </aside>
        </div>
    </section>

    <%- include("partials/footer.ejs") %>