                        <div class="quantity-control flex items-center gap-2 bg-gray-100 rounded-full px-2 py-1 select-none" data-item="3">
                            <button class="qty-btn w-7 h-7 flex items-center justify-center rounded-full bg-white text-gray-700 hover:bg-gray-200" data-action="decrease" aria-label="decrease">−</button>
                            <span class="qty-value min-w-6 text-center text-sm font-medium">1</span>
                            <button class="qty-btn w-7 h-7 flex items-center justify-center rounded-full bg-white text-gray-700 hover:bg-gray-200" data-action="increase" aria-label="increase">+</button>
                    </div>
                </div>
