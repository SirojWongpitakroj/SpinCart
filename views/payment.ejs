<%- include("partials/header.ejs") %>

    <section class="pt-16">
        <!-- Payment Header -->
        <div class="w-full bg-[#ffd174]">
            <h1 class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-12 flex items-center justify-center text-lg font-semibold text-gray-900">Payment</h1>
        </div>

        <!-- Main Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Left Column - Product Summary -->
            <div class="md:col-span-1 space-y-4">
                <!-- Product 1: Smart Air Purifier -->
                <div class="bg-white rounded-xl shadow-sm p-4">
                    <img src="product_images/Smart-Air-Purifier.png" alt="Smart Air Purifier" class="w-full h-48 object-contain mb-3">
                    <h3 class="text-sm font-semibold text-gray-900 mb-1">Smart Air Purifier</h3>
                    <p class="text-xs text-gray-600 mb-2">Air Purifiers for Bedroom Home Dorm, 3-in-1 Filter Cleaner with Fragrance Sponge for Better Sleep.</p>
                    <div class="flex items-center gap-2">
                        <span class="font-semibold text-sm">฿3,998</span>
                    </div>
                </div>

                <!-- Product 2: Wireless Keyboard -->
                <div class="bg-white rounded-xl shadow-sm p-4">
                    <img src="product_images/Wireless_Keyboard.png" alt="Wireless Keyboard" class="w-full h-48 object-contain mb-3">
                    <h3 class="text-sm font-semibold text-gray-900 mb-1">Wireless Keyboard</h3>
                    <p class="text-xs text-gray-600 mb-2">Wireless Keyboard for Windows, 2.4 GHz Wireless Compatible with PC, Laptop.</p>
                    <div class="flex items-center gap-2">
                        <span class="text-gray-900 font-semibold text-sm">฿950</span>
                    </div>
                </div>

                <!-- Product 3: Vacuum Cleaner -->
                <div class="bg-white rounded-xl shadow-sm p-4">
                    <img src="product_images/Vacuum_Cleaner.png" alt="Vacuum Cleaner" class="w-full h-48 object-contain mb-3">
                    <h3 class="text-sm font-semibold text-gray-900 mb-1">Vacuum Cleaner</h3>
                    <p class="text-xs text-gray-600 mb-2">Vacuum Cleaner Description of the Product. </p>
                    <div class="flex items-center gap-2">
                        <span class="font-semibold text-sm">฿2,500</span>
                    </div>
                </div>
            </div>

            <!-- Right Column - Address and Credit Card -->
            <div class="md:col-span-2 space-y-6">
                <!-- Address Section -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Address</h2>
                    <div class="space-y-4">
                        <!-- Address 1 -->
                        <div class="border-b border-gray-200 pb-4 last:border-0">
                            <div class="flex justify-between items-start mb-1">
                                <span class="font-medium text-gray-900">Fooky Switzerland.</span>
                                <span class="text-sm text-gray-600">Phone:08********</span>
                            </div>
                            <p class="text-sm text-gray-700 mt-1">131 Moo 5 Tiwanon Road, Tamboon Bangkadi Mueang Pathum Thani District, Pathum Thani 12000</p>
                        </div>
                    </div>
                </div>

                <!-- Credit Card Section -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Credit Card</h2>
                    <div class="space-y-4">
                        <!-- Card Number -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Card Number</label>
                            <h2 class="text-xl font-medium">0000-0000-0000-0000</h2>
                        </div>
                        
                        <!-- Expiration and CVV -->
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Expiration</label>
                                <h2 class="text-xl font-medium">09/27</h2>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">CVV</label>
                                <h2 class="text-xl font-medium">987</h2>
                            </div>
                        </div>
                        
                        <!-- Card Name -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Card Name</label>
                            <h2 class="text-xl font-medium">Siroj Wongpitakroj</h2>
                        </div>
                    </div>
                    <!-- Checkout Button -->
                    <div class="flex justify-end mt-6">
                        <button class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-8 rounded-full transition-colors duration-200">
                            Checkout
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

<%- include("partials/footer.ejs") %>

