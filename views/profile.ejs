<%- include("partials/header.ejs") %>

    <section class="pt-16 w-full px-4 sm:px-6 lg:px-16">
        <div class="flex flex-col sm:grid sm:grid-cols-2 sm:grid-rows-2 gap-4">
            <input type="hidden" id="uid" name="uid" value="<%= locals.user.user_id %>">
            <!--Address-->
            <div class="flex flex-col gap-2 p-1 order-2 sm:order-none">
                <h2 class="font-semibold text-lg">My Address</h2>
                <div class="flex flex-col items-end sm:grid sm:grid-cols-2 sm:grid-rows-5 gap-2">
                    <textarea name="addressline1" id="addressline1" rows="3" placeholder="Address line 1" required
                              class="row-span-2 w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.address_line1 %></textarea>
                    <textarea name="addressline2" id="addressline2" rows="3" placeholder="Address line 2 (optional)"
                              class="row-span-2 w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.address_line2 %></textarea>
                    <textarea name="city" id="city" rows="1" placeholder="City" required
                              class="w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.city %></textarea>
                    <textarea name="province" id="province" rows="1" placeholder="Province/State" required
                              class="w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.province %></textarea>
                    <textarea name="country" id="country" rows="1" placeholder="Country" required
                              class="w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.country %></textarea>
                    <textarea name="zipcode" id="zipcode" rows="1" placeholder="Zipcode" required
                              class="w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.zipcode %></textarea>
                    <div class="flex justify-end col-start-2 col-end-3"><button id="address-btn" type="button" class="w-fit py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-full">Save</button></div>
                </div>
            </div>

            <!--Payment-->
            <div class="flex flex-col row-start-2 row-end-3 gap-2 order-2 sm:order-none p-1">
                <h2 class="font-semibold text-lg">Payment</h2>
                <div class="flex flex-col items-end gap-2">
                    <textarea name="fullName" id="fullName" rows="1" placeholder="Fullname" required
                              class="row-span-2 w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.credit_card_fullname %></textarea>
                    <textarea name="cardNumber" id="cardNumber" rows="1" placeholder="Credit Card Number" required
                              class="row-span-2 w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.credit_card_number %></textarea>
                    <textarea name="expiryDate" id="expiryDate" rows="1" placeholder="Expiry Date (ex. 09/28)" required
                              class="w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.exp_date %></textarea>
                    <textarea name="cvc" id="cvc" rows="1" placeholder="CVC" required
                            class="w-full p-2 border border-gray-300 rounded-lg text-sm text-black focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"><%= locals.user.cvc %></textarea>
                    <div class="flex justify-end col-start-2 col-end-3"><button id="payment-btn" type="button" class="w-fit py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-full">Save</button></div>
                </div>
            </div>
            <!--Profile Edit-->
            <div class="flex flex-col items-center row-span-2 p-4 gap-4 order-1 sm:order-none">
                <h2 class="font-semibold text-2xl mt-4">Edit Profile</h2>
                <div class="flex flex-col w-full">
                     <div class="bg-blue-500 flex justify-center items-center p-4">
                         <div class="relative rounded-full bg-white h-24 w-24 p-4 aspect-square">
                            <img src="images/profile-logo.png" alt="Profile Logo" class="w-full h-full object-contain">
                         </div>
                     </div>
                     <div class="grid grid-cols-[1fr_2fr] grid-rows-5 bg-white p-4 gap-2">
                        <h3 class="text-md font-medium text-gray-700 flex items-center">Username</h3>
                        <input type="text" placeholder="Username" id="profile-username" value="<%= locals.user.username %>" required
                                class="w-full px-4 py-2 border border-gray-300 text-sm text-gray-900 placeholder-black text-right focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors">
                        <h3 class="text-md font-medium text-gray-700 flex items-center">Fullname</h3>
                        <input type="text" placeholder="Fullname" id="profile-fullname" value="<%= locals.user.f_name%> <%= locals.user.l_name %>" required
                                class="w-full px-4 py-2 border border-gray-300 text-sm text-gray-900 placeholder-black text-right focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors">
                        <h3 class="text-md font-medium text-gray-700 flex items-center">Email</h3> 
                        <input type="text" placeholder="Email" id="profile-email" value="<%= locals.user.email %>" required
                                class="w-full px-4 py-2 border border-gray-300 text-sm text-gray-900 placeholder-black text-right focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors">
                        <h3 class="text-md font-medium text-gray-700 flex items-center">Phone Number</h3>
                        <input type="text" placeholder="Phone Number" id="profile-phoneNumber" value="<%= locals.user.phone_number %>" required
                                class="w-full px-4 py-2 border border-gray-300 text-sm text-gray-900 placeholder-black text-right focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors">
                                <div class="flex justify-center col-span-2"><button id="edit-profile-btn" type="button" class="w-fit py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-full">Save</button></div>        
                    </div>
                </div>
            </div>
        </div>

    </section>

    <% if(locals.incompleteForm) {%>
        <div id="profile-alert-overlay" class="fixed inset-0 z-50 flex items-center justify-center bg-gray-400/50">
            <div class="max-w-lg w-[90%] bg-white border-4 border-red-600 rounded-2xl shadow-2xl px-6 py-6 text-center space-y-4">
                <div class="flex flex-col items-center gap-2">
                    <div class="flex items-center justify-center w-16 h-16 rounded-full bg-red-100 border-2 border-red-500">
                        <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75A9 9 0 1 1 3 12a9 9 0 0 1 18 0ZM12 15.75h.007v.008H12z"/>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-semibold text-red-700">Important Notice</h2>
                    <p class="text-sm text-red-600"><%= !locals.incompleteForm ? "Please fill up Address and Payment method before placing order" : "" %></p>
                </div>
                <button id="profile-alert-dismiss" class="w-full py-2.5 rounded-full bg-red-600 hover:bg-red-700 text-white font-semibold transition-colors duration-200">Dismiss</button>
            </div>
        </div>
    <% } %>  
    
    
    
<%- include("partials/footer.ejs") %>